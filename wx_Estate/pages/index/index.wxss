.guess {
  margin-top: 30rpx;
  padding-left: 30rpx;
  border-left: 2px solid red;
}
.content {
  display: flex;
  width: 100%;
  height: 310rpx;
  margin-top: 30rpx;
  padding: 40rpx 25rpx;
  border-top: 1px solid #bbb8b8;
}
.content .picture image {
  width: 280rpx;
  height: 260rpx;
}
.content .content_text {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  width: 400rpx;
  height: 260rpx;
}
.content .content_text .text1 {
  flex: 1;
  font-size: 40rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}
.content .content_text .text2 {
  flex: 1;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}
.content .content_text .text2 .label {
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .content_text .text2 .price {
  color: red;
  font-size: 40rpx;
  font-weight: 550;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .content_text .text3 {
  flex: 1;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
